{
  "compilerOptions": {
    "listFiles": false,
    "watch": false,
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": true,
    "pretty": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "listEmittedFiles": true,
    "outDir": "ts/js"
  },
  "include": [
    "ts/source/*"
  ],
  "exclude": [
    "node_modules",
    "bower_components"
  ]
}